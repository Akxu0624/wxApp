.InfoItemList {
  clear: both;
  list-style: none;
  padding: 0;
  margin-bottom: 0;
  overflow: auto;
}

.InfoItemList .list-item {
  position: relative;
  padding: 32rpx;
  font-size: 0;
}

.b-item-img {
  display: inline-block;
  width: 150rpx;
  height: 200rpx;
  margin-right: 24rpx;
  vertical-align: middle;
}

.b-item-img image {
  width: 100%;
  height: 100%;
}

.b-item-right {
  display: inline-block;
  width: calc(100% - 80px);
  vertical-align: middle;
}

.b-item-right .b-item-title {
  font-size: 38rpx;
  color: #242424;
  text-align: left;
  margin-bottom: 16rpx;
}
.b-item-right .b-item-des {
  display: -webkit-box;
  width: 100%;
  font-size: 34rpx;
  line-height: 40rpx;
  color: #8f8f8f;
  overflow : hidden;
  text-overflow: ellipsis;
  text-align: justify;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.b-item-right .b-item-info {
  position: relative;
}

.b-item-right .b-item-type {
  float: left;
  display: block;
  margin-left: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #8f8f8f;
  font-size: 30rpx;
  text-align: left;
}
.b-item-right .icon-read {
  float: left;
  position:relative;
  display: block;
  width: 28rpx;
  height: 28rpx;
  left: 0;
  top: 10rpx;
}

.InfoItemList .list-item::after {
  position: absolute;
  display: inline-block;
  content: "";
  width: calc(100% - 32px);
  left: 32rpx;
  right: 0;
  height: 2rpx;
  bottom: 0;
  -webkit-transform: scaleY(.5);
  -ms-transform: scaleY(.5);
  transform: scaleY(.5);
  -webkit-transform-origin: 0 100%;
  -ms-transform-origin: 0 100%;
  transform-origin: 0 100%;
  pointer-events: none;
  background-color: #e5e5e5;
}

.InfoItemList .list-item::after {
  position: absolute;
  display: inline-block;
  content: "";
  width: calc(100% - 64rpx);
  left: 32rpx;
  right: 0;
  height: 2rpx;
  bottom: 0;
  -webkit-transform: scaleY(.5);
  -ms-transform: scaleY(.5);
  transform: scaleY(.5);
  -webkit-transform-origin: 0 100%;
  -ms-transform-origin: 0 100%;
  transform-origin: 0 100%;
  pointer-events: none;
  background-color: #e5e5e5;
}

.InfoItemList .b-view-more {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
}